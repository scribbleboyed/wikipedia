<div class="page-header">
	<div class="container">
	  <h1>Wikipedia Articles <small>Sorted by Recent Updates</small></h1>
	</div>
</div>
<div class="container" ng-app="articles" ng-controller="MainCtrl">
{{ next_page }}
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>User</th>
        <th>Updated At</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="article in articles">
        <td width="50%"><a ng-href="https://en.wikipedia.org/?curid={{ article.pageid }}">{{ article.title }}</a></td>
        <td>{{ article.user }}</td>
        <td>{{ article.timestamp | date: 'medium' }}</td>
      </tr>
    </tbody>
  </table>
</div>